auto lo
iface lo inet loopback

auto eth0.5
iface eth0.5 inet static
	address 172.16.5.1
	netmask 255.255.255.248

auto eth0.1
iface eth0.1 inet static
	address 10.5.5.2
	netmask 255.255.255.224
	gateway 10.5.5.1

